
<html> 
  <body>
    <div class = "table-responsive">
        <table class='table table-striped'>
            <%= link_to "New", new_retailer_path, :class => 'btn btn-primary'  %>
            <h1>Retailers Details</h1>
            <tr>
                <th>Code</th>
                <th>Shop Name</th>
                <th>Retailer Name</th>
                <th>Mobile Number</th>
                <th>Address</th>
                <th>Status</th>
            </tr>
            <% @retailers.each do |retailer| %>    
                <tr>
                    <td><%= retailer.code %></td>
                    <td><%= retailer.shop_name %></td>
                    <td><%= retailer.retialer_name %></td>
                    <td><%= retailer.mobile_number %></td>
                    <td><%= retailer.address %></td>
                    <td><%= retailer.status %></td>   
                </tr>    
            <% end %>
        </table>
    </div>
  </body>
</html> 
